<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Link Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">
<%- include('../partials/header') %>
<div class="container-fluid flex-grow-1 d-flex p-0"> <!-- Full-height container with no padding -->
    <div class="row flex-grow-1 g-0 w-100"> <!-- Ensures the row fills the viewport -->
        <!-- Sidebar -->
        <div class="col-md-2 bg-light d-flex flex-column h-100">
            <%- include('../partials/sidebar') %>
        </div>
        <!-- Main Content -->
        <main class="col-md-10 p-5 bg-white rounded-4 overflow-auto"> <!-- Scrolling enabled only for content -->
            <table class="table table-sm">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Street address</th>
                    <th>City</th>
                </tr>
                </thead>
                <tbody>
                <% clients.forEach(client => { %>
                    <tr>
                        <td><%= client.client_name %></td>
                        <td><%= client.email || '-' %></td>
                        <td><%= client.mobile_number || '555 555' %></td>
                        <td><%= client.address_street || '-' %></td>
                        <td><%= client.address_city || '-' %></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </main>
    </div>
</div>

<!-- Include Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>