<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clients</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styling for sidebar */
        .sidebar {
            height: 100vh;
        }
        .sidebar .nav-link {
            color: #ffffff;
            text-decoration: none;
        }
        .sidebar .nav-link.active {
            background-color: #0d6efd; /* Highlight active link */
        //       color: #ffffff;
        }
        .sidebar .nav-link:hover {
            color: #adb5bd;
        }
    </style>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<!-- Header -->
<header>
    <nav class="navbar navbar-dark bg-primary sticky-top p-0">
        <a class="navbar-brand d-flex align-items-center text-nowrap px-3" href="#">
            <span class="material-icons-outlined" title="Dashboard">edit_road</span>
            &nbsp;kmKeeper
        </a>
        <ul class="navbar-nav flex-row ml-auto px-3">
            <li class="nav-item mx-2">
                <a class="nav-link" href="#" title="Help">
                    <span class="material-icons-outlined">help</span>
                </a>
            </li>
            <li class="nav-item mx-2">
                <a class="nav-link" href="#" title="Settings">
                    <span class="material-icons-outlined">settings</span>
                </a>
            </li>
            <li class="nav-item mx-2">
                <a class="nav-link" href="#" title="Applications">
                    <span class="material-icons-outlined">apps</span>
                </a>
            </li>
            <li class="nav-item mx-2">
                <a class="nav-link" href="#" title="User Profile">
                    <span class="material-icons-outlined">account_circle</span>
                </a>
            </li>
            <li class="nav-item mx-2">
                <a class="btn text-white" href="#" data-bs-toggle="tooltip" title="Sign out">Sign out</a>
            </li>
        </ul>
    </nav>
</header>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 sidebar d-flex flex-column p-3 bg-light-subtle">
            <button type="button" class="btn btn-light d-flex align-items-center justify-content-start mb-3">
                <span class="material-icons-outlined me-2">add</span> New
            </button>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/dashboard" class="nav-link <%= text === 'dashboard' ? 'active' : 'link-dark' %>">
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/trips/browse" class="nav-link <%= text === 'trips' ? 'active' : 'link-dark' %>">
                        Trips
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/clients/browse" class="nav-link <%= text === 'clients' ? 'active' : 'link-dark' %>">
                        Clients
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content Area -->
        <main class="col-md-10 p-4">
            <table class="table table-sm">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Street address</th>
                    <th>City</th>
                </tr>
                </thead>
                <tbody>
                <% clients.forEach(client => { %>
                    <tr>
                        <td><%= client.name %></td>
                        <td><%= client.email || '-' %></td>
                        <td><%= client.phone_number || '-' %></td>
                        <td><%= client.address_street || '-' %></td>
                        <td><%= client.address_city || '-' %></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </main>
    </div>
</div>

<!-- Link to local Bootstrap JS Bundle -->
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>